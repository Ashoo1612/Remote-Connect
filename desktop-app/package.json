{
  "name": "remotedesk-desktop",
  "version": "1.0.0",
  "description": "Remote Desktop Control Application",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ashoo1612/Remote-Connect.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --publish never",
    "build:dir": "electron-builder --win --dir"
  },
  "author": "RemoteDesk",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@jitsi/robotjs": "^0.6.11",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.remotedesk.desktop",
    "productName": "RemoteDesk",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
